<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h4 class="ml-5 mt-3", style="background-color: #9933ff; width:280px; padding-left: 12px; margin-bottom: 40px;">注文履歴詳細</h4>

      <!--<table class="d-flex flex-column" style="height: 200px;">-->
        <table class='table table-hover table-inverse table-borderless'>
          <thead>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.full_name %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postcode %><%= @order.address %><br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td><%= form_with model: [ :admin, @order ]  do |f| %>
            <%= f.select :status, Order.statuses.keys.to_a, {} %><%= f.submit "更新", class:"ml-5 btn btn-success", style:"font-weight:bold;" %></td>
            <% end %>
          </td>
        </tr>
        </thead>
      </table>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
      </div>
      <div class='col-md-8 offset-md-1'>
        <div class='row'>
        <tbody>
          <% @order_item.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
          　<td><%= order_item.purchase_price %></td>
            <td><%= order_item.quantity %></td>
            <td><%= order_item.total_price.to_s %></td>
            <td>
              <%= form_with model: [ :admin, order_item ]  do |f| %>
              <%= f.select :production_status, OrderItem.production_statuses.keys.to_a, {} %><%= f.submit "更新", class:"ml-3  btn btn-success", style:"font-weight:bold;" %>
            <% end %>
            </td>
           </tr>
           <% end %>
         </tbody>
      </table>
      </div>
      <div>
        <table>
          <tr>
            <td>商品合計</td>
            <td><%= (@order.total_payment - @order.postage) %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td>¥<%= @order.postage %></td>
          </tr>
          <tr>
            <td>ご請求額</th>
            <td>¥<%= @order.total_payment.to_s(:delimited) %></th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<div class='container'>
  <h3 class= "pt-4">注文履歴一覧</h3>
  <div class='row'>
    <div class='col-md-8 offset-md-1 pt-4'>
      <table class='table text-center'>
        <thead style= "background-color: #880000;", class="text-white">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
         <tbody style= "background-color: #fff;">
           <tr>

             <td><%= link_to admin_order_path(order.id) do %>
             <u><%= order.created_at.strftime('%Y/%m/%d　%H:%M') %><u>

             <% end %>
             </td>
             <td><%= order.customer.full_name %></td>
             <td class="text-center"><%= order.items.sum(:quantity) %></td>
             <td class="text-center"><%= order.status_i18n %></td>
           </tr>
         </tbody>
          <% end %>
      </table>
      <%= paginate @orders%>
    </div>
  </div>
</div>
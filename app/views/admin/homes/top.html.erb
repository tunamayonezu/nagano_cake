<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2 class="ml-5 mt-3", style="background-color: #0f0; width:230px; padding-left: 12px; margin-bottom: 40px;">注文履歴一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
         <tbody>
           <tr>
             <!-- lメソッドを使って書式を指定する -->
             <td><%= link_to admin_order_path(order.id) do %>
             <u><%= order.created_at.strftime('%Y/%m/%d %X') %><u>
               <%#=  l order.created_at %>
             <% end %>
             </td>
             <td><%= order.customer.full_name %></td>
             <td><%= order.order_item.sum(:quantity) %></td>
             <td><%= order.order_status_i18n %></td>
           </tr>
         </tbody>
      </table>
      <% end %>
      <%= paginate @orders%>
    </div>
  </div>
</div>
<div class="table-responsive mt-3">
    <table class="table table-bordered">
        <thead style="background-color:rgba(130,0,0,0.8);">
            <tr>
                <th>ジャンル検索</th>
            </tr>
        </thead>
        <tbody style="background-color:rgba(255,255,255,0.5);">
            <% genres.each do |genre| %>
            <tr>
                <td>
                    <%= link_to items_path(genre_id: genre.id) , class: 'nav-link text-dark' do %>
                        <%= genre.name %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= paginate genres %>
</div>
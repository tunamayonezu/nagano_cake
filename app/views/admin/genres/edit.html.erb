<div class="container">
  <div class="row">
    <h2>ジャンル編集</h2>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <div class="form-group row">
        <%= f.label :ジャンル名, class: 'col-md-4' %>
        <%= f.text_field :name, class: 'col-md-6' %>
        <%= f.submit :編集, class: 'btn btn-success col-md-2' %>
      </div>
    <% end %>
  </div>
  
</div>

<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>
  <div class="col-xl-4">
    <%= image_tag @item.get_image(400,400) %>
  </div>
  <div class="col-xl-8">
    <div class="row">
      <span class="col-md-5">商品名</span>
      <span class="col-md-7"><%= @item.name %></span>
    </div>
    <div class="row">
      <span class="col-md-5">商品説明</span>
      <span class="col-md-7"><%= @item.explanation %></span>
    </div>
    <div class="row">
      <span class="col-md-5">ジャンル</span>
      <span class="col-md-7"><%= @item.genre.name %></span>
    </div>
    <div class="row">
      <span class="col-md-5">税抜き価格 (税込み価格)</span>
      <span class="col-md-7"><%= @item.price %> (<%= @item.purchase_price %>)円</span>
    </div>
    <div class="row">
      <span class="col-md-5">販売ステータス</span>
      <span class="col-md-7"><%= @item.is_active %></span>
    </div>
    <div class="text-container">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "ml-5 btn btn-success" %>
    </div>
  </div>
</div>
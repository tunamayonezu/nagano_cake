<div class= "container" >
  <div class= "row" >
    <h2>商品詳細</h2>
  </div>
  <div class="row" >
    <th class="col-6"><%= image_tag @item.get_image(400,400) %></th>
    <table class="table table-bordered col-6 offset-1 ">
      <tbody>
        <tr>
          <td class="text-white" style="background-color:rgba(130,0,0,0.8);">商品名</td>
          <td style="background-color:rgba(255,255,255,0.5);"><%= @item.name %></td>
        </tr>
        <tr>
          <td class="text-white" style="background-color:rgba(130,0,0,0.8);">商品説明</td>
          <td style="background-color:rgba(255,255,255,0.5);"><%= @item.explanation %></td>
        </tr>
        <tr>
          <td class="text-white" style="background-color:rgba(130,0,0,0.8);">ジャンル</td>
          <td style="background-color:rgba(255,255,255,0.5);"><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td class="text-white" style="background-color:rgba(130,0,0,0.8);">税抜き価格 (税込み価格)</td>
          <td style="background-color:rgba(255,255,255,0.5);"><%= @item.price %> (<%= @item.purchase_price %>)円</td>
        </tr>
        <tr>
          <td class="text-white" style="background-color:rgba(130,0,0,0.8);">販売ステータス</td>
          <% if @item.is_active  %>
            <td class= "text-suscces" style="background-color:rgba(255,255,255,0.5);"><b>販売中</b></td>
          <% else %>
            <td style="background-color:rgba(255,255,255,0.5);"><b>販売停止</b></td>
          <% end %>
        </tr>
      </tbody>
    </table>  
  </div>
  <div class="text-right" style="padding: 10px;">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg" %>
  </div>
</div>
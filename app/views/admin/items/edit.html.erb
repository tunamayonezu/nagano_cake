<div class="container">
  <div class="row">
    <h2>商品編集</h2>
    <div class="col-sm-12">
      <%= form_with model: @item, url:admin_item_path(@item.id), method: :patch, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :商品画像, class: 'col-md-4' %>
          <%= f.file_field :image, class: 'col-md-8', accept: "image/*" %>
        </div>
        <div class="form-group row">
          <%= f.label :商品名, class: 'col-md-4' %>
          <%= f.text_field :name, class: 'col-md-8' %>
        </div>
        <div class="form-group row">
          <%= f.label :商品説明, class: 'col-md-4' %>
          <%= f.text_area :explanation, class: 'col-md-8' %>
        </div>
        <div class="form-group row">
          <%= f.label :ジャンル, class: 'col-md-4' %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "ジャンルを選択してください" %>
        </div>
        <div class="form-group row">
          <%= f.label :税抜き価格, class: 'col-md-4' %>
          <%= f.text_field :price, class: 'col-md-7' %><span class="col-md-1">円</span>
        </div>
        <div class="form-group row">
          <%= f.label :販売ステータス, class: 'col-md-4' %>
          <%= f.radio_button :is_active, 1, checked: true %>販売中
          <%= f.radio_button :is_active, 0 %>販売停止中
        </div>
        <div class="form-group row">
          <%= f.submit :編集, class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

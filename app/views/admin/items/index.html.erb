<div class="container">
  <div class="row">
    <div class="col-md-3 aligen-item-center">
      <h2>商品一覧</h2>
    </div>
    <div class="col-md-9">
      <div class="rounded-circle text-center ml-auto" style="background-color: pink; width: 50px; height: 50px" >
        <%= link_to "+", new_admin_item_path, class: "text-muted lead" %>
      </div>
    </div>
  </div>
  <table class="table table-hover table-bordered">
    <thead class="text-white" style="background-color:rgba(130,0,0,0.8);">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody style="background-color:rgba(255,255,255,0.5);">
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name if item.genre.present? %></td>
          <% if item.is_active  %>
          <td class="text-Secondary">販売中</td>
          <% else %>
            <td class="text-success"><b>販売停止中</b></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
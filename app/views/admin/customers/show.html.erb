<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h4 class="ml-5 mt-3", style="background-color: #9933ff; width:280px; padding-left: 12px; margin-bottom: 40px;"><%= @customer.full_name %>さんの会員詳細</h4>

      <!--<table class="d-flex flex-column" style="height: 200px;">-->
        <table class='table table-hover table-inverse table-borderless'>
          <thead>
        <tr><th>会員ID</th><td><%= @customer.id %></td></tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
          </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted %>
            <td class="text-Secondary"><b>退会</b></td>
          <% else %>
            <td class="text-success"><b>有効</b></td>
          <% end %>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_root_path(@customer.id), class: 'btn btn-primary' %></td>
        </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
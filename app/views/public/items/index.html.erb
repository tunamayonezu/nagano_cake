<div class="container">
    <div class="row">
        <div class="col-3">
            <%= render "admin/genres/genre_search", genres: @genres %>
        </div>
        <div class="col-9">
            <div class="row mt-3 p-1"  style="background-color:rgba(130,0,0,0.8);">
                <h3 class="" style="color:rgba(225,255,255,1);">商品一覧（全<%= @items_count %>件）</h3>
            </div>
            <div class="row d-flex flex-wrap" style="background-color:rgba(255,255,255,0.5);">
                <% @items.each do |item| %>
                <div class="col-3 flex-wrap ml-5">
                    <% if item.is_active == false %>
                        <%= image_tag item.get_image(150, 150) %>
                        <p class="text-left"><%= item.name %></p>
                        <p class="text-left">販売停止中</p>
                    <% else %>
                        <%= link_to item_path(item), class: 'nav-link text-dark' do %>
                        <%= image_tag item.get_image(150, 150) %>
                        <p class="text-left"><%= item.name %></p>
                        <p class="text-left">¥<%= item.purchase_price %></p>
                        <% end %>
                    <% end %>
                </div>
                <% end %>
            </div>
            <%= paginate @items %>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-3">
            <!-- Junre から持ってくる -->
        </div>
        <div class="col-9">
            <div class="row">
                <h3 class="col-md-3">商品一覧（全ｘ件）</h3>
            </div>
            <div class="row d-flex flex-wrap">
                <% @items.each do |item| %>
                <% if item.is_active == "販売中" %>
                <div class="col-3 flex-wrap">
                    <%= link_to item_path(item),class: top-link do %>
                    <% image_tag item.get_image(150, 150) %>
                    <p class="text-left"><%= item.name %></p>
                    <p class="text-left">¥<%= item.purchase_price %></p>
                    <% end %>
                </div>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>

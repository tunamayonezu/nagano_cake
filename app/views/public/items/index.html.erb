<div class="container">
    <div class="row">
        <div class="col-3">
            <%= render "admin/genres/genre_search", genres: @genres %>
        </div>
        <div class="col-9">
            <div class="row mt-3">
                <h3 class="">商品一覧（全ｘ件）</h3>
            </div>
            <div class="row d-flex flex-wrap">
                <% @items.each do |item| %>
                <% if item.is_active == true %>
                <div class="col-3 flex-wrap ml-5">
                    <%= link_to item_path(item) do %>
                    <%= image_tag item.get_image(150, 150) %>
                    <p class="text-left"><%= item.name %></p>
                    <p class="text-left">¥<%= item.purchase_price %></p>
                    <% end %>
                </div>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>

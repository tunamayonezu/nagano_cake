<div class="container">
    <div class="row">
        <div class="col-3">
            <%= render "admin/genres/genre_search", genres: @genres %>
        </div>
        <div class="col-9">
            <div class="row">
                <div class="col-md-5">
                    <%= image_tag @item.get_image(200, 150) %>
                </div>
                <div class="col-md-6 offset-md-1">
                    <h4><%= @item.name %></h4>
                    <h4><%= @item.explanation %></h4>
                    <p>¥<%= @item.purchase_price %>(税込)</p>
                    <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
                        <%= f.hidden_field :item_id, :value => @item.id %>
                        <%= f.select :quantity, *[1..10], class: "" %>
                        <%= f.submit "カートに入れる", class: "ml-5 btn btn-success" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4 offset-1 text-center pt-3">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-4 offset-1 text-center pt-3">
      <%= link_to "カートを空にする", destroy_all_path, method: :delete, data: { confirm: '本当に消しますか？' },  class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead style="background-color:rgba(130,0,0,0.6);">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody style="background-color:rgba(255,255,255,0.5);">
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(100, 100) %>
              <%= cart_item.item.name %>
            </td>
            <td>¥<%= cart_item.item.purchase_price %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                <%= f.select :quantity, options_for_select(*[1..10], {selected: cart_item.quantity.to_i} ), class: "offset-3" %>
                <%= f.submit "変更",  class: "btn btn-outline-success offset-3" %>
              <% end %>
            </td>
            <td>¥<%= cart_item.total_price.to_s(:delimited) %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, data: { confirm: '本当に消しますか？' },  class: "btn btn-outline-danger" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-5">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    </div>
    <div class="col-6">
      <table class="table table-bordered">
        <tr>
          <td style="background-color:rgba(0,180,255,0.5);">合計金額</td>
          <td style="background-color:rgba(255,255,255,0.5);">¥<%= @total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-4 mb-4">
    <div class="col text-center">
      <% if @cart_items.any? %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

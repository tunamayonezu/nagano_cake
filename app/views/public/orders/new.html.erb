<div class="container">
    <div class="row">
        <div class="col-10 mx-auto">
            <h3>注文情報入力</h3>
            <%= form_with model: @order, url: confirm_path, local:true do |f| %>
            <div>
                <h3><%= f.label :payment_method, "支払方法" %></h3>
                <div class="ml-3">
                    <%= f.radio_button :payment_method, "クレジットカード", checked: "checked" %>
                    <%= f.label :payment_method, "クレジットカード" %>
                </div>
                <div class="ml-3">
                    <%= f.radio_button :payment_method, "銀行振込" %>
                    <%= f.label :payment_method, "銀行振込" %>
                </div>
            </div>
            
            <div class="delivery-address-select">
                <h3><%= f.label :address, "お届け先" %></h3>
                <div class="ml-3">
                    <%= f.radio_button :address_option, 0, checked: "checked" %>
                    <%= f.label :address, "ご自身の住所" %>
                    <br>
                    <%= "〒#{current_customer.postcode} #{current_customer.address}" %>
                    <%= current_customer.last_name + current_customer.first_name %>
                </div>
                <div class="ml-3 mt-3">
                    <%= f.radio_button :address_option, 1 %>
                    <%= f.label :address, "登録済住所から選択" %>
                    <br>
                    <%= f.select :deliveries_id, options_from_collection_for_select(current_customer.deliveries.all, :id, :address) %>
                </div>
                <div class="ml-3 mt-3">
                    <%= f.radio_button :address_option, 2 %>
                    <%= f.label :address, "新しいお届け先" %>
                    <div class="row">
                        <div class="col-3">
                            <%= f.label :postcode, "郵便番号（ハイフンなし）" %>
                        </div>
                        <div>
                            <%= f.text_field :postcode %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <%= f.label :address, "住所" %>
                        </div>
                        <div>
                            <%= f.text_field :address %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <%= f.label :name, "宛先" %>
                        </div>
                        <div>
                            <%= f.text_field :name %>
                        </div>
                    </div>
                </div>
                
                <div class="text-center">
                    <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>

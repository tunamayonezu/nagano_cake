<div class="container">
    <div class="row">
        <h3>注文情報確認</h3>
    </div>
    <div class="row">
        <div class="col-7">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>商品名</th>
                            <th>単価（税込）</th>
                            <th>数量</th>
                            <th>小計</th>
                        </tr>
                    </thead>
                    <% @cart_items.each do |cart_item| %>
                    <tbody>
                        <tr>
                            <td>
                                <%= image_tag cart_item.item.get_image(150,100) %>
                                <%= cart_item.item.name %>
                            </td>
                            <td>¥<%= (cart_item.item.price * 1.1).floor.to_s(:delimited) %></td>
                            <td><%= cart_item.quantity %></td>
                            <td>¥<%= (cart_item.item.price * cart_item.quantity * 1.1).floor.to_s(:delimited) %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>
        </div>
        <div class="col-4">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <%= form_with model: @order, url: orders_path, method: :post, local:true do |f| %>
                    <tr>
                        <td>送料</td>
                        <td>
                            ¥<%= @order.postage.to_s(:delimited) %>
                            <%= f.hidden_field :postage, :value => @order.postage %>
                        </td>
                    </tr>
                    <tr>
                        <td>商品合計</td>
                        <td>¥<%= @total_price.to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <td>請求金額</td>
                        <td>
                            ¥<%= (@total_price + @order.postage).to_s(:delimited) %>
                            <%= f.hidden_field :total_payment, :value => (@total_price + @order.postage) %>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="row">
                <div class="col-4">
                    <h3>支払方法</h3>
                </div>
                <div class="col-8">
                    <h4><%= @order.payment_method %></h4>
                    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <h3>お届け先</h3>
                </div>
                <div class="col-8">
                    〒<%= @order.postcode %>
                    <%= f.hidden_field :postcode, :value => @order.postcode %>
                    <%= @order.address %>
                    <%= f.hidden_field :address, :value => @order.address %>
                    <br>
                    <%= @order.name %>
                    <%= f.hidden_field :name, :value => @order.name %>
                </div>
            </div>
        </div>
    </div>
            <div class="row">
                <div class="col-12 p-5 mb-5 text-center">
                    <%= f.submit "購入を確定する", class: "btn btn-success text-center" %>
                </div>
            </div>
    <% end %>
</div>
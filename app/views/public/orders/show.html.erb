<div class="container">
  <h3 class= "pt-4">注文詳細一覧</h3><!--ほり追記-->
    <div class="row">
     <!--   <h3>注文詳細一覧</h3> -->
        <div class="col-7">
            <p class= "pt-4">注文情報</p> <!--ほり、class追記-->
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr><!--styleとclass追記-->
                    <td style= "background-color: #880000;", class="text-white">注文日</td>
                    <td style= "background-color: #fff;"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
                </tr>
                <tr>
                    <td style= "background-color: #880000;", class="text-white">配送先</td>
                    <td style= "background-color: #fff;">
                        〒<%= @order.postcode %><br>
                        <%= @order.address %>
                    </td>
                </tr>
                <tr>
                    <td style= "background-color: #880000;", class="text-white">支払方法</td>
                    <td style= "background-color: #fff;"><%= @order.payment_method_i18n %></td>
                </tr>
                <tr>
                    <td style= "background-color: #880000;", class="text-white">ステータス</td>
                    <td style= "background-color: #fff;"><%= @order.status_i18n %></td>
                </tr>
            </table>
        </div>
        </div>

        <div class="col-4"> <!--元は3-->
            <p class= "pt-4">請求情報</p>
        <div class="table-responsive">
            <table class="table table-bordered table-borderless">
                <tr>
                    <td style= "background-color: #880000;", class="text-white">商品合計</td>
                    <td style= "background-color: #fff;">¥<%= (@order.total_payment - @order.postage).to_s(:delimited) %></td>
                </tr>
                <tr>
                    <td style= "background-color: #880000;", class="text-white">配送料</td>
                    <td style= "background-color: #fff;">¥<%= @order.postage %></td>
                </tr>
                <tr>
                    <th style= "background-color: #880000;", class="text-white"><h4>ご請求額</h4></th>
                    <th style= "background-color: #fff;"><h4>¥<%= @order.total_payment.to_s(:delimited) %></h4></th>
                </tr>
            </table>
        </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <p>注文内容</p>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead  style= "background-color: #880000;", class="text-white"><!--追記-->
                    <tr>
                        <td>商品</td>
                        <td>単価（税込）</td>
                        <td>個数</td>
                        <td>小計</td>
                    </tr>
                </thead>
                <tbody style= "background-color: #fff;">
                    <% @order_item.each do |order_item| %>
                    <tr>
                        <td><%= order_item.item.name %></td>
                        <td><%= order_item.purchase_price %></td>
                        <td><%= order_item.quantity %></td>
                        <td>¥<%= order_item.total_price.to_s(:delimited) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>
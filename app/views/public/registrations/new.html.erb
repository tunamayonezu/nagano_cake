<div><%= flash[:notice] %></div>

<div class="col-6 mb-5">
 <h2 class= "text-center mt-3 mb-3 font-weight-bold">新規会員登録</h2>
</div>

<div class= "container">
   <div class="col-sm-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field row">
    <%= f.label "名前" %>
    <%= f.label "(姓)", class: 'col-md-2'%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label "(名)", class: 'col-md-2'%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field row">
    <%= f.label "フリガナ" %>
    <%= f.label "(セイ)", class: 'col-md-2' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label "(メイ)", class: 'col-md-2' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field row">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode"%>
  </div>

  <div class="field row">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field row">
    <%= f.label "電話番号" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field row">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field row">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field row">
    <%= f.label "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions row">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
 </div>
</div>

<%= render "public/shared/links" %>

<div><%= flash[:notice] %></div>

<div class="col-6 mb-5">
 <h2 class= "text-center mt-3 mb-3 font-weight-bold">新規会員登録</h2>
</div>

<div class= "container">
   <div class="col-sm-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field row mb-3">
    <%= f.label "名前", class: 'col-md-4' %>
    <%= f.label "(姓)", class: 'mr-2 ml-2'%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label "(名)", class: 'mr-2 ml-5'%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%>
  </div>

  <div class="field row mb-3">
    <%= f.label "フリガナ", class: 'col-md-4' %>
    <%= f.label "(セイ)", class: 'mr-2' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label "(メイ)", class: 'mr-2 ml-4' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field row mb-3">
    <%= f.label "郵便番号", class: 'col-md-4' %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class:"col-8"%>
  </div>

  <div class="field row mb-3">
    <%= f.label "住所", class: 'col-md-4' %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"col-8"%>
  </div>

  <div class="field row mb-3">
    <%= f.label "電話番号", class: 'col-md-4' %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field row mb-3">
    <%= f.label "メールアドレス", class: 'col-md-4' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field row mb-3">
    <%= f.label "パスワード(6文字以上)", class: 'col-md-4' %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field row mb-3">
    <%= f.label "パスワード(確認用)", class: 'col-md-4' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions row-6 mb-3">
    <%= f.submit "新規登録", class:" mt-3 btn btn-success" %>
  </div>
<% end %>
 </div>
</div>

<div class="col-4 mt-5">
   <h5 class= "text-center mt-3 mb-3 font-weight-bold">既に登録済みの方</h5>
</div>

<div class="col-7 pt-2" style="margin-left:200px;">
   <p class="text-center" style="background-color:white; width:380px;"><%= link_to "こちら", new_customer_session_path, class:'text-info' %>からログインを行なってください。</p>
</div>


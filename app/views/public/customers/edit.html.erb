
<div class="col-5">
 <h2 class= "text-center mt-3 mb-4 font-weight-bold">会員情報編集</h2>
</div>

   <% if @customer.errors.any? %>
     <%= @customer.errors.count %>件のエラーが発生しました
     <ul>
      <% @customer.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
   <% end %>

<div class= "container">
     <div class="col-sm-6">
        <%= form_with model: @customer, url: info_path, method: :patch do |f| %>
          <div class="form-group row">
            <%= f.label "姓", class: 'col-md-2'%>
            <%= f.text_field :last_name %>
            <%= f.label "名", class: 'col-md-2' %>
            <%= f.text_field :first_name %>
          </div>

          <div class="form-group row">
            <%= f.label "セイ", class: 'col-md-2' %>
            <%= f.text_field :last_name_kana %>
            <%= f.label "メイ", class: 'col-md-2' %>
            <%= f.text_field :first_name_kana %>
          </div>

          <div class="form-group row">
            <%= f.label "郵便番号", class: 'col-md-4' %><br />
            <%= f.text_field :postcode %>
          </div>

          <div class="form-group row">
            <%= f.label "住所", class: 'col-md-4' %><br />
            <%= f.text_field :address, class: 'col-md-8' %>
          </div>

          <div class="form-group row">
            <%= f.label "電話番号", class: 'col-md-4' %><br />
            <%= f.text_field :phone_number, class: 'col-md-8'%>
          </div>

          <div class="form-group row">
            <%= f.label "メールアドレス", class: 'col-md-4' %><br />
            <%= f.email_field :email, class: 'col-md-8' %>
          </div>

          <div class="form-group row">
            <%= f.submit "変更内容を保存", class: 'mt-3 btn btn-success' %>
          </div>

          <div class="form-group row">
            <%= link_to "退会する", unsubscribe_path, class: 'mt-3 btn btn-danger' %>
          </div>
        <% end %>
     </div>
</div>
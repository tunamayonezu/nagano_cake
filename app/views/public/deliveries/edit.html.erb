<div class="col-6">
 <h2 class= "text-center mt-3 mb-5">配送先編集</h2>
</div>
<% if @delivery.errors.any? %>
  <%= @delivery.errors.count %>件のエラーが発生しました
  <ul>
    <% @delivery.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

<div class= "container" style="margin-left:200px;">
  <div class="col-7">
<%= form_with model: @delivery, url: delivery_path, method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postcode, class: 'ml-3' %>
   </div>

   <div class="form-group row">
    <%= f.label "住所" %>
    <%= f.text_field :address, class: 'col-md-8 ml-5' %>
   </div>

   <div class="form-group row">
    <%= f.label "宛名" %>
    <%= f.text_field :name, class: 'ml-5' %>
   </div>
   <div class="form-group text-right">
    <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
   </div>
<% end %>
 </div>
</div>
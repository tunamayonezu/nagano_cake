<h2>配送先編集</h2>
<% if @delivery.errors.any? %>
  <%= @delivery.errors.count %>件のエラーが発生しました
  <ul>
    <% @delivery.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

<%= form_with model: @delivery, url: delivery_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postcode %>
   </div>

   <div class="form-group">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
   </div>

   <div class="form-group">
    <%= f.label "宛名" %>
    <%= f.text_field :name %>
   </div>
   <div class="form-group">
    <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
   </div>
<% end %>
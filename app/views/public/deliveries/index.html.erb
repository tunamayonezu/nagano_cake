<h2>配送先登録/一覧</h2>
<% if @delivery.errors.any? %>
  <%= @delivery.errors.count %>件のエラーが発生しました
  <ul>
    <% @delivery.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

<%= form_with model: @delivery, local:true do |f| %>
   <div class="form-group">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postcode %>
   </div>

   <div class="form-group">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
   </div>

   <div class="form-group">
    <%= f.label "宛名" %>
    <%= f.text_field :name %>
  </div>

   <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>

 <table class="table">
   <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
       <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
     <% @deliveries.each do |delivery| %>
     <tr>
       <td><%= delivery.postcode %></td>
       <td><%= delivery.address %></td>
       <td><%= delivery.name %></td>
       <td><%= link_to "編集する", edit_delivery_path(delivery), class: 'btn btn-success' %></td>
       <td><%= link_to "削除する", delivery_path(delivery), method: :delete, class: 'btn btn-danger' %></td>
     </tr>
     <% end %>
  </tbody>
</table>


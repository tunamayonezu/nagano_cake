<div class="col-6">
 <h2 class= "text-center mt-3 mb-5 font-weight-bold">配送先登録/一覧</h2>
</div>
<% if @delivery.errors.any? %>
  <%= @delivery.errors.count %>件のエラーが発生しました
  <ul>
    <% @delivery.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

<div class= "container" style="margin-left:200px;">
 <div class="col-7">
<%= form_with model: @delivery, local:true do |f| %>
   <div class="form-group row">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postcode, placeholder: "8110011", class: 'ml-3' %>
   </div>

   <div class="form-group row">
    <%= f.label "住所" %>
    <%= f.text_field :address, placeholder: "◯◯県◯◯市/郡◯◯/区/町/村", class: 'col-md-8 ml-5' %>
   </div>

   <div class="form-group row">
    <%= f.label "宛名" %>
    <%= f.text_field :name, placeholder: "名前", class: 'ml-5' %>
  </div>

   <div class="form-group text-right">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>
 </div>
</div>

<div class="table-responsive mt-5" style="width:70%; margin:auto;">
 <table class="table table-bordered border-primary">
   <thead  style="background-color:rgba(130,0,0,0.8);">
    <tr class="text-center text-white">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
       <th colspan="5"></th>
    </tr>
  </thead>
  <tbody style="background-color:white;">
     <% @deliveries.each do |delivery| %>
     <tr class="text-center">
       <td><%= delivery.postcode %></td>
       <td><%= delivery.address %></td>
       <td><%= delivery.name %></td>
       <td><%= link_to "編集する", edit_delivery_path(delivery), class: 'btn btn-success' %>
           <%= link_to "削除する", delivery_path(delivery), method: :delete, class: 'btn btn-danger' %></td>
     </tr>
     <% end %>
  </tbody>
 </table>
</div>

